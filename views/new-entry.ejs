<%- include('header') -%>

<h2>Write a new entry</h2>

<form method="post" role="form">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="Entry book title" required>
    </div>
    <div class="form-group">
        <label for="body">Content</label>
        <textarea class="form-control" name="body" id="body" placeholder="Describe your book" rows="3" required rows="3"></textarea>
    </div>
    <div class="form-group">
        <input class="btn btn-primary" type="submit" value="Post entry"></div>
    </div>
</form>

<%- include('footer') -%>